<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<strong>Ingredients:</strong>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= "#{dose.ingredient.name} - #{dose.description} " %>
    <%= link_to "Remove", cocktail_dose_path(@cocktail, dose), method: :delete %>

  </li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Delete dose', cocktail_doses_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %> |
